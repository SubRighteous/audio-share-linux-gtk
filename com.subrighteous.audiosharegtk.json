{
    "id" : "com.subrighteous.audiosharegtk",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "audiosharegtk",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
	"--socket=session-bus",
    	"--talk-name=org.freedesktop.RealtimeKit1",
	"--filesystem=xdg-run/dbus",
	"--filesystem=xdg-run/pipewire-0",
	"--filesystem=xdg-run/pipewire"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "audiosharegtk=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [

	{
	  "name": "as-cmd",
	  "buildsystem": "simple",
	  "build-commands": [
	    "install -D bin/as-cmd /app/bin/as-cmd"
	  ],
	  "sources": [
	    {
	      "type": "archive",
	      "url": "https://github.com/mkckr0/audio-share/releases/download/v0.3.4/audio-share-server-cmd-linux.tar.gz",
	      "sha256": "dcf25cba5c19f0bed8c12ec7c374521e5c7d98be50d0ce9886251610bb43524f"
	    },
	    {
  		"type": "dir",
  		"path": "screenshots",
  		"dest": "share/app-info/screenshots/media/"
	    }
	  ]
	},
        {
            "name" : "audiosharegtk",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/daniel/Desktop/AudioShare_GTK"
                }

            ]

        }
    ]
}
